<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleTracker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/grey</item>
        <item name="colorPrimaryVariant">@color/grey</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/grey</item>
        <item name="colorSecondaryVariant">@color/grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="Theme.SimpleTracker.shantell">
        <item name="fontFamily">@font/shantell_sans</item>
    </style>
    <style name="Theme.SimpleTracker.noto">
        <item name="fontFamily">@font/noto_serif</item>
    </style>
    <style name="Theme.SimpleTracker.lexend">
        <item name="fontFamily">@font/lexend</item>
    </style>

    <style name="Theme.SimpleTracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SimpleTracker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SimpleTracker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>